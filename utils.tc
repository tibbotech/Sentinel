unsigned char
hexdigit(char c)
{
	if(c >= '0' && c <= '9')
		return c-'0';
		
	if(c >= 'a' && c <= 'f')
		return c-'a'+10;
		
	if(c >= 'A' && c <= 'F')
		return c-'A'+10;
		
	return 0;
}


unsigned char
unhex(char& *str)
{
	return (hexdigit(*str++) << 4) | hexdigit(*str++);
}


