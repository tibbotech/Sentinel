/*! \brief Extract argument from http query string
 */
string
query_arg(string& get, string key, string dflt)
{
	int p, i, l;
	string res = dflt;
	
	key = "&"+key+"=";
	
	p = instr(1, get, key, 1);
	if(0 == p) 
		return dflt; // not found
			
	p += len(key);
	l = len(get);
		
	i = instr(p, get, "&", 1);
	if(i == 0) {
		i = instr(p, get, " ", 1);
		if(i == 0)
			i = l+1;
	}
		
	return mid(get, p, i-p);
}


