string
htmlspecialchars(string s)
{
	word i, l;
	string res;
	char c;
	res = "";
	
	for(i=0, l=len(s); i<l; ++i) {
		c = s[i];
		switch(c) {
			case '<':
				res += "&lt;";
				break;
			case '>':
				res += "&gt;";
				break;
			case '&':
				res += "&amp;";
				break;
			case '\"':
				res += "&quot;";
				break;
			case '\'':
				res += "&#039;";
				break;
			default:
				res += chr(c);
				break;
		}
	}
	
	return res;
}


