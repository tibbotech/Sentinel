bool
open_always(unsigned char fnum, string& fname)
{
	pl_fd_status_codes res;
	
	fd.filenum = fnum;
	if(fd.fileopened)
		return true;
		
	if((res = fd.open(fname)) == PL_FD_STATUS_OK)
		return true;
		
	if(res == PL_FD_STATUS_NOT_FOUND) {
		res = fd.create(fname);
		if(PL_FD_STATUS_OK == res) {
			DBG("Created file \""+fname+"\"...");
			res = fd.open(fname);
			if(PL_FD_STATUS_OK == res)
				return true;
		}
	}
	
	ERR("Failed to open file \""+fname+"\" ("+filesys_errcodestr(res)+")");
	return false;
}


bool
contains_only(string& pattern, string& chars)
{
	byte i, j, li, lj;
	char c;
	
	li = len(pattern);
	lj = len(chars); 
	
	if(0 == lj || 0 == li)
		return true;
		
	for(i=0; i<li; ++li) {
		c = pattern[i];
	
		for(j=0; j<lj; ++j)
			if(c == chars[j])
				break;
		
		if(j == lj)
			return false;
	}
	
	return true;
}

