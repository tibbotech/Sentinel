	GPRS_PPP_CONFREQ=1,
	GPRS_PPP_CONFACK,
	GPRS_PPP_CONFNAK,
	GPRS_PPP_CONFREJ,
	GPRS_PPP_ECHOREQ=9,
	GPRS_PPP_ID=12
end enum

enum gprs_phases
	GPRS_PPP_LCP, 'this is where gprs_phase will be changed to GPRS_PH_PPP
	GPRS_PPP_PAP,
	GPRS_PPP_IPCP_1,
	GPRS_PPP_IPCP_2,
	GPRS_PPP_IPCP_3,
	GPRS_PPP_PING,
	GPRS_PPP_SESSION
end enum

enum gprs_lcp_parse_results
	GPRS_LCP_PARSE_RESULT_ACK,
	GPRS_LCP_PARSE_RESULT_NAK,
	GPRS_LCP_PARSE_RESULT_REJ,
	GPRS_LCP_PARSE_RESULT_DISCARD
end enum

