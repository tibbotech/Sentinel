sub gprs_init()
'Call this first to initialize this library to a safe idle state.

	ppp.enabled=NO
	gprs_running=NO
	gprs_linkup_in_prog=NO
	gprs_socket=sock_get("GPRS")
	gprs_apn=""
	gprs_username=""
	gprs_password=""
	gprs_dont_print_stop=NO
	
end sub

